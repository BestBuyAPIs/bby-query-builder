{
  "name": "bby-query-mixer",
  "private": true,
  "version": "0.0.1",
  "description": "A query builder for the Best Buy Product APIs",
  "repository": "https://github.com/BestBuyAPIs/bby-query-mixer.git",
  "license": "MIT",
  "devDependencies": {
    "bower": "1.3.x",
    "grunt": "0.4.x",
    "grunt-http-server": "1.0.x",
    "grunt-karma": "0.9.x",
    "grunt-protractor-runner": "1.1.x",
    "http-server": "0.6.x",
    "karma": "0.x",
    "karma-cli": "0.0.x",
    "karma-jasmine": "0.1.x",
    "karma-junit-reporter": "0.2.x",
    "karma-phantomjs-launcher": "0.1.x",
    "phantomjs": "1.9.x",
    "protractor": "1.1.x",
    "selenium-webdriver": "2.43.x",
    "shelljs": "0.2.x"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
